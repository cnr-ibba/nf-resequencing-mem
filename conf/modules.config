/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {

    publishDir = [
        path: { "${params.outdir}/${task.process.tokenize(':')[-1].tokenize('_')[0].toLowerCase()}" },
        mode: params.publish_dir_mode,
        saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
    ]

    withName: TABIX_BGZIP {
        publishDir = [
            path: { "${params.outdir}/fasta_index" },
            mode: params.publish_dir_mode,
            pattern: "*.fa*",
            enabled: params.save_fasta_index
        ]
    }

    withName: SAMTOOLS_FAIDX {
        publishDir = [
            path: { "${params.outdir}/fasta_index" },
            mode: params.publish_dir_mode,
            pattern: "*.fai",
            enabled: params.save_fasta_index
        ]
    }

    withName: FASTQC {
        ext.args = '--quiet'
    }

    withName: TRIMGALORE {
        publishDir = [
            [
                path: { "${params.outdir}/trimgalore" },
                mode: params.publish_dir_mode,
                pattern: "*.txt"
            ],
            [
                path: { "${params.outdir}/trimmed" },
                mode: params.publish_dir_mode,
                pattern: "*.gz",
                enabled: params.save_trimmed

            ],
        ]
    }

    withName: BWA_INDEX {
        publishDir = [
            path: { "${params.outdir}/bwa_index" },
            mode: params.publish_dir_mode,
            pattern: "bwa",
            enabled: params.save_bwa_index
        ]
    }

    withName: BWA_MEM {
        publishDir = [
            enabled: false
        ]
    }

    withName: BAMADDRG {
        publishDir = [
            enabled: false
        ]
    }

    withName: PICARD_MARKDUPLICATES {
        publishDir = [
            path: { "${params.outdir}/bam_files" },
            mode: params.publish_dir_mode,
            pattern: "*.bam",
            enabled: params.save_bam
        ]
    }

    withName: SAMTOOLS_INDEX {
        publishDir = [
            path: { "${params.outdir}/bam_files" },
            mode: params.publish_dir_mode,
            pattern: "*.bai",
            enabled: params.save_bam
        ]
    }

    withName: SAMTOOLS_COVERAGE {
        ext.args2 = '--n-bins 100'
        publishDir = [
            path: { "${params.outdir}/coverage" },
            mode: params.publish_dir_mode,
            pattern: "*.{csv,txt}"
        ]
    }

    withName: FREEBAYES_MULTI {
        publishDir = [
            path: { "${params.outdir}/freebayes" },
            mode: params.publish_dir_mode,
            pattern: "*.{vcf.gz,vcf.gz.tbi}",
            enabled: params.save_freebayes
        ]
    }

    withName: BCFTOOLS_NORM {
        publishDir = [
            path: { "${params.outdir}/normalized-vcf" },
            mode: params.publish_dir_mode,
            pattern: "*.vcf.gz",
        ]
    }

    withName: TABIX_TABIX {
        publishDir = [
            path: { "${params.outdir}/normalized-vcf" },
            mode: params.publish_dir_mode,
            pattern: "*.{tbi,csi}",
        ]
    }

    withName: CUSTOM_DUMPSOFTWAREVERSIONS {
        publishDir = [
            path: { "${params.outdir}/pipeline_info" },
            mode: params.publish_dir_mode,
            pattern: '*_versions.yml'
        ]
    }

}
