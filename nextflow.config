
// Global default params, used in configs
params {
  enable_conda = false
  outdir = "$projectDir/results"
  publish_dir_mode = "copy"
  reads_path = "data/*_R{1,2}_*.fastq.gz"
  genome_path = "/path/to/genome.fasta"

  // Trimming
  clip_r1                    = null
  clip_r2                    = null
  three_prime_clip_r1        = null
  three_prime_clip_r2        = null
}

// parameters specific to a profile. Override the defaults params, if the same
// scope is applied (ex: params.enable_conda for conda profile)
profiles {
  conda {
    params.enable_conda = true
  }
  docker {
    docker.enabled = true
  }
  singularity {
    singularity.enabled = true
    singularity.autoMounts = true
  }
  pbs {
    // within this configuration, I will apply this to every process
    process.executor = 'pbs'
    process.queue = 'core'
    process.queueSize = 100
    process.pollInterval = '30sec'
  }
}

// The executor configuration scope allows you to set the optional executor settings
// https://www.nextflow.io/docs/latest/config.html#scope-executor
// For local executor maximum CPU and MEMORY are determined while running. If you
// want to set custom limits, eneble the following:
// executor {
//   // for the local executer, I will set the maximum values of CPU and MEMORY
//   $local {
//     cpus = 8
//     memory = '16 GB'
//   }
// }

// When mixing generic process configuration and selectors the following priority rules
// are applied (from lower to higher: https://www.nextflow.io/docs/latest/config.html#selectors-priority):
// 1. Process generic configuration.
// 2. Process specific directive defined in the workflow script.
// 3. withLabel selector definition.
// 4. withName selector definition.
process {
  // default
  cpus = 1

  // only processes with this label have those parameters
  withLabel: process_high {
    cpus = 4
    memory = 4.GB
  }

  withLabel: process_medium {
    cpus = 2
    memory = 4.GB
  }

  withLabel: process_low {
    memory = 2.GB
  }
}

manifest {
  name = 'cnr-ibba/nf-resequencing'
  author = 'Paolo Cozzi'
  homePage = 'https://github.com/cnr-ibba/nf-resequencing'
  description = 'Resequencing with SNP calls'
  mainScript = 'main.nf'
  nextflowVersion = '>=20.04.0'
  version = '0.2.0dev'
}
